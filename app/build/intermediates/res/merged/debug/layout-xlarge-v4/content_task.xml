<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.UI_TaskActivity"
    tools:showIn="@layout/activity_task">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="5"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">


        <Chronometer
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chronometer1"
            android:textSize="80sp"
            android:layout_marginLeft="100dp"
            android:format="00:00:00"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="367dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bTestString"
            android:textColor="#ffffff"
            android:textSize="50sp"
            android:background="@drawable/button_test"
            android:id="@+id/bTest"
            android:onClick="onTest"
            android:layout_marginLeft="120dp"
            android:layout_below="@+id/chronometer1"
            android:layout_centerHorizontal="true" />

 <LinearLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="116dp"
     android:layout_marginLeft="30dp"
     android:layout_below="@+id/bTest"
     android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="@string/tvTodayString"
            android:layout_marginRight="30dp"
            android:textSize="50sp"
            android:textStyle="bold"
            android:id="@+id/tvToday"
            android:textColor="#691e0b"

            android:layout_alignTop="@+id/tvCount"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#4c4c4c"
            android:textSize="50sp"
            android:text="@string/tvCountString"
            android:id="@+id/tvCount"

            android:layout_below="@+id/bTest"
            android:layout_alignStart="@+id/bTest" />

        <TextView
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#4c4c4c"
            android:text="@string/slashString"
            android:textSize="50sp"
            android:id="@+id/tvSlash"
            android:layout_alignTop="@+id/tvCount"
            android:layout_alignEnd="@+id/bTest" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#ff0000"
            android:text="@string/tvTotalString"
            android:textSize="50sp"
            android:id="@+id/tvTotal"
            android:layout_below="@+id/bTest"
            android:layout_toEndOf="@+id/chronometer1" />
 </LinearLayout>


    </RelativeLayout>
</RelativeLayout>
