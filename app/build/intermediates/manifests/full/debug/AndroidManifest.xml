<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cmu.procrastination.focuscoding"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/FullscreenTheme" >
        <activity
            android:name="cmu.procrastination.focuscoding.ui.UI_MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="cmu.procrastination.focuscoding.ui.UI_TaskActivity"
            android:label="@string/title_activity_task"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="cmu.procrastination.focuscoding.ui.UI_SettingActivity"
            android:label="@string/title_activity_setting"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="cmu.procrastination.focuscoding.ui.UI_AnalysisActivity"
            android:label="@string/title_activity_analysis"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- Set the login page as the home FOR NOW -->
        <activity
            android:name="cmu.procrastination.focuscoding.ui.UI_SignInSignUpActivity"
            android:label="@string/title_activity_sign_in_sign_up"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cmu.procrastination.focuscoding.ui.UI_LinkinActivity"
            android:label="@string/title_activity_linkin"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>